root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{cs,csproj,props,targets}]
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,ts,html,css,scss}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{ps1,psm1}]
indent_style = space
indent_size = 4
